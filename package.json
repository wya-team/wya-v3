{
    "name": "@wya/vc",
    "version": "3.0.0-alpha.1",
    "description": "wya for vue@3.x components",
    "main": "lib/index.js",
    "files": [
        "lib/**"
    ],
    "scripts": {
        "start": "npm run dev",
        "dev": "node ./build/dev.js",
        "build": "rm -rf ./lib && cross-env NODE_ENV=production node --max_old_space_size=8192 ./build/build.js",
        "pub": "bash build/publish.sh",
        "lint": "esw src build --ext .vue,.js,.ts,.jsx,.tsx --color",
        "lint:fix": "npm run lint -- --fix",
        "lint:watch": "npm run lint -- --watch --fix",
        "lint:style": "stylelint --fix 'src/**/*.{vue,css,scss}' --cache --cache-location node_modules/.cache/stylelint/"
    },
    "author": "wya-team",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/wya-team/wya-vc.next"
    },
    "bugs": {
        "url": "https://github.com/wya-team/wya-vc.next/issues"
    },
    "dependencies": {
        "async-validator": "^3.5.2",
        "lodash": "^4.17.21",
        "mobile-drag-drop": "^2.3.0-rc.2",
        "normalize-wheel": "^1.0.1",
        "normalize.css": "^8.0.1",
        "resize-observer-polyfill": "^1.5.1"
    },
    "devDependencies": {
        "@babel/runtime": "^7.13.10",
        "@rollup/plugin-alias": "^3.1.5",
        "@rollup/plugin-buble": "^0.21.3",
        "@rollup/plugin-commonjs": "^19.0.2",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-replace": "^3.0.0",
        "@types/lodash": "^4.14.168",
        "@types/node": "^16.4.12",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "@vitejs/plugin-vue": "^1.2.4",
        "@vitejs/plugin-vue-jsx": "^1.1.6",
        "@vue/compiler-sfc": "^3.2.1",
        "@wya/http": "^1.5.0",
        "@wya/utils": "^1.6.5",
        "autoprefixer": "^9.8.6",
        "cross-env": "^7.0.3",
        "cssnano": "^4.1.10",
        "echarts": "^5.1.2",
        "ejs": "^3.1.6",
        "eslint": "^7.29.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-babel": "^5.3.1",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-markdown": "^2.0.0",
        "eslint-plugin-vue": "^7.12.1",
        "eslint-watch": "^7.0.0",
        "fs-extra": "^9.1.0",
        "glob": "^7.1.6",
        "html2canvas": "^1.0.0",
        "husky": "^6.0.0",
        "inquirer": "^7.3.3",
        "inquirer-autocomplete-prompt": "^1.3.0",
        "lint-staged": "^10.5.4",
        "node-sass": "^5.0.0",
        "photoswipe": "^4.1.3",
        "postcss": "^8.3.4",
        "postcss-flexbugs-fixes": "^5.0.2",
        "postcss-import": "^14.0.0",
        "quill": "^1.3.7",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.32.8",
        "stylelint": "^13.12.0",
        "stylelint-config-standard": "^21.0.0",
        "stylelint-order": "^4.1.0",
        "typescript": "^4.2.3",
        "upath": "^2.0.1",
        "vite": "^2.4.4",
        "vue": "^3.2.1",
        "vue-eslint-parser": "^7.6.0"
    },
    "peerDependencies": {
        "@wya/http": "^1.5.0",
        "@wya/utils": "^1.6.5",
        "echarts": "^5.1.2",
        "html2canvas": "^1.0.0",
        "photoswipe": "^4.1.3",
        "quill": "^1.3.7",
        "vue": "^3.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "node ./build/script/commit-lint"
        }
    },
    "lint-staged": {
        "{src,build}/**/*.{js,jsx,ts,tsx,vue}": [
            "esw --ext '.vue,.js,.jsx' --fix",
            "git add"
        ],
        "*.md": [
            "esw --ext '.md' --fix",
            "git add"
        ],
        "src/**/*.{css,scss,vue}": [
            "stylelint --fix",
            "git add"
        ]
    }
}
